{
  "name": "@pglabs/next-prisma",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "rebuild": "rm -rf dist && pnpm build",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@types/node": "^22.14.1",
    "auto-changelog": "^2.5.0",
    "release-it": "^18.1.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "chalk": "^5.4.1",
    "next": "^15.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "requireBranch": "releases",
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "npm run build"
      ],
      "after:bump": [
        "npx auto-changelog -p"
      ]
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  }
}
