{
  "name": "@pglabs/next-prisma",
  "version": "0.2.0",
  "description": "Loving both Prisma and Next.js but struggling to make them work together? This package is for you!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pierregueroult/next-prisma.git"
  },
  "bugs": {
    "url": "https://github.com/pierregueroult/next-prisma/issues",
    "email": "contact@pierregueroult.dev"
  },
  "scripts": {
    "build": "tsc",
    "rebuild": "rm -rf dist && pnpm build",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run tests",
    "e2e": "vitest run e2e",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "prisma",
    "next",
    "nextjs",
    "typescript",
    "orm"
  ],
  "author": {
    "name": "Pierre Gu√©roult",
    "email": "contact@pierregueroult.dev",
    "url": "https://pierregueroult.dev"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "3.1.1",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "release-it": "^19.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.1",
    "webpack": "^5.99.6"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "chalk": "^5.4.1",
    "next": "^15.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "requireBranch": "releases",
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "pnpm run build",
        "pnpm run lint",
        "pnpm run test",
        "pnpm run e2e"
      ],
      "after:bump": [
        "npx auto-changelog -p"
      ]
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  }
}
